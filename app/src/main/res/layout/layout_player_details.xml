<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tempPlayerCount"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/placeHolderStGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/tempReducePlayers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/minusTxt"
            android:textColor="@color/black"
            app:backgroundTint="#FFFFFF" />

        <EditText
            android:id="@+id/tempNumberPlayers"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:autofillHints="Enter Strokes."
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="@string/_1Txt"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/tempIncreasePlayers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/plusTxt"
            android:textColor="@color/black"
            app:backgroundTint="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/placeHolderStGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_gameTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/playerCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_of_playersTxtTemp"
        app:layout_constraintBottom_toTopOf="@+id/tempPlayerCount"
        app:layout_constraintEnd_toEndOf="@+id/tempPlayerCount"
        app:layout_constraintStart_toStartOf="@+id/tempPlayerCount" />
</androidx.constraintlayout.widget.ConstraintLayout>